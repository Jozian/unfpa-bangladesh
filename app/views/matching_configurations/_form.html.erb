<div class="row">
  <div class="large-12 columns">
    <%= form_for @matching_configuration, url: matching_configuration_path(@matching_configuration.id), method: :put,  html: { :class => 'default-form', :autocomplete => "off" } do |f| %>
      <fieldset class="no-border">
        <div class="row">
          <div class="large-6 columns">
            <div class="row">
              <%= f.label :case_fields, t("matching_configuration.case_fields"), :class => "key inline" %>
            </div>
            <div class="row">
              <%= f.select :case_fields,
                           grouped_options_for_select(@matching_configuration.case_field_options,
                                                      @matching_configuration.case_fields,
                                                      {}),
                           {},
                           {multiple: true, :'data-placeholder' => t("fields.select_box_empty_item"), class: 'chosen-select'} %>
            </div>
          </div>
          <div class="large-6 columns">
            <div class="row">
              <%= f.label :tracing_request_fields, t("matching_configuration.tracing_request_fields"), :class => "key inline" %>
            </div>
            <div class="row">
              <%= f.select :tracing_request_fields,
                           grouped_options_for_select(@matching_configuration.tracing_request_field_options,
                                                      @matching_configuration.tracing_request_fields,
                                                      {}),
                           {},
                           {multiple: true, :'data-placeholder' => t("fields.select_box_empty_item"), class: 'chosen-select'} %>
            </div>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>




