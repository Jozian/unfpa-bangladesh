<%
  is_field_edit ||= false
%>
<div class="translation">
  <% if show_drop_down %>
    <div class="row">
      <div class="medium-2 columns">
        <label class="key inline"><%= t(:provide_translation) %></label>
      </div>
      <div class="medium-5 columns">
        <div class="lang_title">
	      <%= select_tag("locale", options_for_select(Primero::Application::locales_with_description.reject { |option| option.last == given_locale }), :class => 'locale') %>
        </div>
      </div>
    </div>
  <% end %>
</div>
