<div class="row">
  <div class="columns small-12 header_section">
    <div class="row data">
      <div class="columns small-6">
        <h2>
          <span class="match-header"><%= I18n.t('potential_match.case') %>:</span>
          #<%= potential_match.case_id_display%>
        </h2>
      </div>
      <div class="columns small-6">
        <h2>
          <span class="match-header"><%= I18n.t('potential_match.trace') %>:</span>
          #<%= text_to_identify_potential_match_tracing_request(potential_match) %>
        </h2>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="columns small-12 ">
    <div class="row data value-comparison">
      <div class="columns small-2 key">
        <strong><%= I18n.t('potential_match.name') %></strong>
      </div>
      <div class="columns small-4">
        <%= potential_match.case_name %>
      </div>
      <div class="columns small-6">
        <%= potential_match.tracing_request_name %>
      </div>
    </div>
    <div class="row data value-comparison">
      <div class="columns small-2 key">
        <strong><%= I18n.t('potential_match.child_gender') %></strong>
      </div>
      <div class="columns small-4">
        <%= display_sex(potential_match.child_sex, lookups) %>
      </div>
      <div class="columns small-6">
        <%= display_sex(potential_match.tracing_request_sex, lookups) %>
        <%= comparison_symbol(special_comparison['sex']) %>
      </div>
    </div>
    <div class="row data value-comparison">
      <div class="columns small-2 key">
        <strong><%= I18n.t('potential_match.child_age') %></strong>
      </div>
      <div class="columns small-4">
        <%= potential_match.child_age %>
      </div>
      <div class="columns small-6">
        <%= potential_match.tracing_request_age %>
        <%= comparison_symbol(special_comparison['age']) %>
      </div>
    </div>
    <div class="row data value-comparison">
      <div class="columns small-2 key">
        <strong><%= I18n.t('potential_match.child_date_of_birth') %></strong>
      </div>
      <div class="columns small-4">
        <%= field_format_date(potential_match.child_date_of_birth) %>
      </div>
      <div class="columns small-6">
        <%= field_format_date(potential_match.tracing_request_date_of_birth) %>
        <%= comparison_symbol(special_comparison['date_of_birth']) %>
      </div>
    </div>
    <% comparison[:case].each do |comparison_field| %>
      <div class="row data value-comparison">
        <div class="columns small-6 key">
          <strong><%= comparison_field[:case_field].display_name %></strong>
        </div>
        <div class="columns small-6">
          <%= comparison_symbol(comparison_field[:matches]) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<button class="close-button" data-close aria-label="Close modal" type="button">
  <span aria-hidden="true">&times;</span>
</button>