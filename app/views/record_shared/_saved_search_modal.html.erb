  <div class="reveal tiny" id="save_filters" data-reveal>
    <% #TODO: i18n/ move to partial %>
    <h5><%= t('saved_searches.save_search') %></h5>
    <div class="message"></div>
    <label><%= t('saved_searches.name') %></label>
    <div class="input-group">
      <input type="text" name="name" class="input-group-field" />
      <div class="input-group-button">
        <button type="button" class="button save_user_filters" disabled="disabled"><%= t('buttons.save') %></button>
      </div>
    </div>
    <div id="filter-list" class="large-12 small-12 columns index_filters">
      <% if @saved_searches.present? %>
        <ul class="save-searches">
          <% @saved_searches.each do |filter| %>
            <li>
              <a class="user_filter" data-id="<%= filter.id %>"><%= filter.name %></a>
              <%= link_to  filter, method: :delete, data: { confirm: t('saved_searches.delete', filter_name: filter.name) }, class: "delete_saved_search" do %>
                <span aria-hidden="true">&times;</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p><%= t('saved_searches.no_save_searches') %></p>
      <% end %>
    </div>
    <button class="close-button" data-close aria-label="Close modal" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>